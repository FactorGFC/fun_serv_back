<%= form_with(model: my_app, local: true) do |form| %>
  <% if my_app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(my_app.errors.count, "error") %> prohibited this my_app from being saved:</h2>

      <ul>
        <% my_app.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :javascript_origins %>
